{
	"name": "itson",
	"version": "0.6.2",
	"description": "A CLI tool for configuration-driven management of long-running interactive applications.",
	"keywords": [
		"cli",
		"process",
		"manager",
		"updater"
	],
	"homepage": "https://github.com/kitschpatrol/itson",
	"bugs": "https://github.com/kitschpatrol/itson/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/itson.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"bin": {
		"itson": "dist/cli.js"
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsdown --no-fixed-extension ./src/bin/cli.ts",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish",
		"test": "vitest",
		"test:install": "pnpm link",
		"test:uninstall": "pnpm remove -g itson"
	},
	"dependencies": {
		"c12": "^3.3.1",
		"execa": "^9.6.0",
		"keytar-forked": "^7.10.0"
	},
	"devDependencies": {
		"@aws-sdk/client-s3": "3.893.0",
		"@clack/prompts": "^0.11.0",
		"@kitschpatrol/shared-config": "^5.8.3",
		"@octokit/rest": "^22.0.1",
		"@types/node": "^22.19.0",
		"@types/plist": "^3.0.5",
		"@types/semver": "^7.7.1",
		"@types/yargs": "^17.0.34",
		"bumpp": "^10.3.1",
		"cron-parser": "^5.4.0",
		"cronstrue": "^3.9.0",
		"find-versions": "^6.0.0",
		"is-online": "^12.0.1",
		"lognow": "^0.3.2",
		"mdat-plugin-cli-help": "^1.0.2",
		"minimatch": "^10.1.1",
		"plist": "^3.1.0",
		"plur": "^6.0.0",
		"semver": "^7.7.3",
		"tsdown": "^0.16.1",
		"type-fest": "^5.2.0",
		"typescript": "~5.9.3",
		"vitest": "^4.0.8",
		"yargs": "^18.0.0"
	},
	"packageManager": "pnpm@10.20.0",
	"engines": {
		"node": ">=22.12.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
