{
	"name": "itson",
	"version": "0.1.2",
	"description": "A CLI tool for configuration-driven management of long-running interactive applications.",
	"keywords": [
		"cli",
		"process",
		"manager",
		"updater"
	],
	"homepage": "https://github.com/kitschpatrol/itson",
	"bugs": "https://github.com/kitschpatrol/itson/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/itson.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"bin": {
		"itson": "dist/bin/cli.js"
	},
	"scripts": {
		"build": "pkgroll --clean-dist --minify --tsconfig tsconfig.build.json",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "kpi fix",
		"lint": "kpi lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"c12": "^3.2.0",
		"consola": "^3.4.2",
		"execa": "^9.6.0",
		"keytar-forked": "^7.10.0"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.5.0",
		"@octokit/rest": "^22.0.0",
		"@types/node": "^22.17.0",
		"@types/semver": "^7.7.0",
		"@types/yargs": "^17.0.33",
		"bumpp": "^10.2.2",
		"find-versions": "^6.0.0",
		"pkgroll": "^2.15.0",
		"semver": "^7.7.2",
		"typescript": "~5.8.3",
		"yargs": "^18.0.0"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": "^22.12.0 || >=23"
	},
	"publishConfig": {
		"access": "public"
	}
}
